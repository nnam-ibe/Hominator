<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="seg.user.interface3125.thehominator.Parking">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/parkingCard"
        android:layout_width="match_parent"
        card_view:cardBackgroundColor="@color/colorPrimary"

        android:layout_height="300dp"

        card_view:cardCornerRadius="1dp"
        card_view:cardElevation= "5dp"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        card_view:cardPreventCornerOverlap="false"

        card_view:cardUseCompatPadding="true">
        <RelativeLayout
            android:id="@+id/feedHeader2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:background="#FFFFFF"
            >

            <TextView
                android:id="@+id/vehicleInfo"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:padding="8dp"
                android:text="Vehicle information"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:textSize="9pt"
                android:visibility="visible"  />


            <TextView
                android:id="@+id/vMake"
                android:layout_marginTop="65dp"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"
                android:text="Vehicle make:"
                android:textSize="9pt"
                />

            <EditText
                android:id="@+id/vMaked"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:maxLength="13"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="50dp"
                android:inputType="text"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/vMake"
                android:layout_below="@+id/line"/>

            <TextView
                android:id="@+id/vModel"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vMake"
                android:text="Vehicle model:"
                android:textSize="20sp"
                />

            <EditText
                android:id="@+id/vModeled"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:layout_marginLeft="12dp"
                android:maxLength="13"
                android:inputType="text"
                android:layout_width="198dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/vModel"
                android:layout_below="@+id/vMaked"/>


            <TextView
                android:id="@+id/vPlate"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vModel"
                android:text="License Plate:"
                android:textSize="20sp"
                />

            <EditText
                android:id="@+id/vPlated"
                android:paddingRight="10dp"
                android:layout_marginLeft="17dp"
                android:paddingTop="10dp"
                android:maxLength="8"
                android:inputType="text"

                android:layout_marginTop="5dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/vPlate"
                android:layout_below="@+id/vModeled"/>

            <TextView
                android:id="@+id/vColor"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vPlate"
                android:text="Vehicle Color:"
                android:textSize="20sp"
                />

            <EditText
                android:id="@+id/vColored"
                android:paddingRight="20dp"
                android:layout_marginLeft="19dp"
                android:paddingTop="10dp"
                android:maxLength="13"
                android:inputType="text"
                android:layout_marginTop="5dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/vColor"
                android:layout_below="@+id/vPlated"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/parkingCard"
        android:orientation="vertical">
        <Button
            android:layout_width="215dp" android:layout_height="55dp"
            android:layout_marginTop="15dp" android:text="Submit"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="9pt"
            android:background="#4E7AC7"
            android:textColor="#FFFFFF"
            android:onClick="parkingOnClick" />
    </LinearLayout>
</RelativeLayout>
