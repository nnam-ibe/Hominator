<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp">
    <TextView
        android:id="@+id/nature1"
        android:text="@string/complaint_nature"
        android:paddingLeft="14dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:textColor="#000000" />

    <Spinner

        android:id="@+id/complaintSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nature1"
        android:entries="@array/complaint_array"
        android:prompt="@string/complaint_prompt"
        android:paddingStart="10dp"
        android:paddingBottom="10dp"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_below="@+id/complaintSpinner"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true"
        android:id="@+id/complaint_content"
        android:visibility="visible"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:id="@+id/noiseInfo"

            >

            <TextView android:text="Infraction Date and Time"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="#000000"
                android:textSize="20sp"
                android:id="@+id/noiseDate"
                />
            <View
                android:id="@+id/Date_line"
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="#000000"
                android:layout_below="@+id/noiseDate"
                android:layout_alignEnd="@+id/noiseDate" />
            <TextView
                android:paddingTop="20dp"
                android:id="@+id/complaint_date_main"
                android:textSize="20sp"
                android:textColor="#000000"
                android:text="Date: "
                android:layout_below="@+id/Date_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:id="@+id/complaint_date_set"
                android:textSize="20sp"
                android:layout_below="@+id/Date_line"
                android:layout_toRightOf="@+id/complaint_date_main"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingTop="30dp"
                android:id="@+id/complaint_time_main"
                android:textSize="20sp"
                android:textColor="#000000"
                android:text="Time: "
                android:layout_below="@+id/complaint_date_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingTop="30dp"
                android:paddingLeft="20dp"
                android:id="@+id/complaint_time_set"
                android:textSize="20sp"
                android:layout_below="@+id/complaint_date_main"
                android:layout_toRightOf="@id/complaint_time_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please provide further information in the field below"
                android:id="@+id/complaintInfo"
                android:textSize="20sp"
                android:textColor="#000000"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_below="@+id/complaint_time_main"
                />
            <EditText
                android:layout_width="match_parent"

                android:layout_height="60dp"
                android:id="@+id/comp_editText"
                android:inputType="textMultiLine"
                android:layout_below="@+id/complaintInfo"/>



        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/complaint_content"
        android:orientation="vertical">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Request"
            android:onClick="complaintOnClick" />
    </LinearLayout>
</LinearLayout>