<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="seg.user.interface3125.thehominator.ContactUs"
    android:id="@+id/contact_us">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/colorCards"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true"
        android:id="@+id/cardView"
        android:onClick="repairScreen">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/office_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Merivale Office"
                android:textColor="#000000"
                android:textSize="25sp" />
            <View
                android:id="@+id/line"
                android:layout_width="wrap_content"
                android:layout_height="2dip"
                android:layout_below="@+id/office_name"
                android:layout_marginTop="7dp"
                android:background="#000000" />

            <TextView
                android:id="@+id/addLine1"
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"
                android:text="50 Rideau Street"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/addLine2"
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addLine1"
                android:text="Ottawa, Ontario K1N 9J7"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/addPhone"
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addLine2"
                android:text="(613) 688-5575"
                android:textSize="20sp"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
