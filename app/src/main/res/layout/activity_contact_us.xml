<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="seg.user.interface3125.thehominator.ContactUs"
    android:id="@+id/contact_us">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true"
        android:id="@+id/cardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/office_name"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:padding="8dp"
                android:text="Merivale Office"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:textSize="9pt"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/addLine1"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/office_name"
                android:text="50 Rideau Street"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/addLine2"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addLine1"
                android:text="Ottawa, Ontario K1N 9J7"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/addPhone"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:paddingBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addLine2"
                android:text="(613) 688-5575"
                android:textSize="20sp"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
