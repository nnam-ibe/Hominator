<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="seg.user.interface3125.thehominator.Party_Room">

    <TextView
        android:text="The rooms are avaliable between 10AM and 10PM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:id="@+id/party_room_helpText" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/party_room_helpText"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true"
        android:id="@+id/party_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView android:text="Select the date and times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="25sp"
                android:id="@+id/party_room_main" />
            <View
                android:id="@+id/party_line"
                android:layout_width="wrap_content"
                android:layout_height="2dip"
                android:layout_below="@+id/party_room_main"
                android:layout_marginTop="7dp"
                android:background="#000000" />

            <TextView
                android:paddingTop="30dp"
                android:id="@+id/party_date_main"
                android:textSize="20sp"
                android:textColor="#000000"
                android:text="Date:"
                android:layout_below="@+id/party_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingTop="30dp"
                android:paddingLeft="20dp"
                android:id="@+id/party_date_set"
                android:textSize="20sp"
                android:layout_below="@+id/party_line"
                android:layout_toRightOf="@+id/party_date_main"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingTop="30dp"
                android:id="@+id/party_time_main"
                android:textSize="20sp"
                android:textColor="#000000"
                android:text="Start time:"
                android:layout_below="@+id/party_date_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingTop="30dp"
                android:paddingLeft="20dp"
                android:id="@+id/party_time_set"
                android:textSize="20sp"
                android:layout_below="@+id/party_date_main"
                android:layout_toRightOf="@id/party_time_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingTop="30dp"
                android:id="@+id/party_endTime_main"
                android:textSize="20sp"
                android:textColor="#000000"
                android:text="End time:"
                android:layout_below="@+id/party_time_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingTop="30dp"
                android:paddingLeft="20dp"
                android:id="@+id/party_endTime_set"
                android:textSize="20sp"
                android:layout_below="@+id/party_time_set"
                android:layout_toRightOf="@id/party_time_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/party_content"
        android:orientation="vertical">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Request"
            android:onClick="partyOnClick" />
    </LinearLayout>
</RelativeLayout>
