<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="seg.user.interface3125.thehominator.Party_Room">

    <TextView
        android:text="The rooms are avaliable between 10AM and 10PM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:id="@+id/party_room_helpText" />

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/party_content"
        android:layout_width="match_parent"
        card_view:cardBackgroundColor="@color/colorPrimary"
        android:layout_height="300dp"
        android:layout_below="@+id/party_room_helpText"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation= "5dp"
        android:layout_margin="5dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true">
        <RelativeLayout
            android:id="@+id/feedHeader2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:background="#FFFFFF"
            >
            <TextView    android:layout_width="match_parent"
                android:layout_height="41dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:padding="8dp"
                android:text="Set time and date"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:textSize="9pt"
                android:visibility="visible"
                android:id="@+id/party_room_main" />

            <TextView
                android:paddingTop="30dp"
                android:paddingLeft="15dp"
                android:id="@+id/party_date_main"
                android:textSize="20sp"
                android:textColor="#000000"
                android:text="Date:"
                android:layout_below="@+id/party_room_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingTop="30dp"
                android:paddingLeft="20dp"
                android:id="@+id/party_date_set"
                android:textSize="20sp"
                android:layout_below="@+id/party_room_main"
                android:layout_toRightOf="@+id/party_date_main"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingTop="30dp"
                android:id="@+id/party_time_main"
                android:paddingLeft="15dp"
                android:textSize="20sp"
                android:textColor="#000000"
                android:text="Start time:"
                android:layout_below="@+id/party_date_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingTop="30dp"
                android:paddingLeft="20dp"
                android:id="@+id/party_time_set"
                android:textSize="20sp"
                android:layout_below="@+id/party_date_main"
                android:layout_toRightOf="@id/party_time_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingTop="30dp"
                android:id="@+id/party_endTime_main"
                android:paddingLeft="15dp"
                android:textSize="20sp"
                android:textColor="#000000"
                android:text="End time:"
                android:layout_below="@+id/party_time_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingTop="30dp"
                android:paddingLeft="20dp"
                android:id="@+id/party_endTime_set"
                android:textSize="20sp"
                android:layout_below="@+id/party_time_set"
                android:layout_toRightOf="@id/party_time_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/party_content"
        android:orientation="vertical">
        <Button
            android:layout_width="215dp" android:layout_height="55dp"
            android:layout_marginTop="15dp" android:text="Submit"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="9pt"
            android:background="#4E7AC7"
            android:textColor="#FFFFFF"
            android:onClick="partyOnClick"

   />
    </LinearLayout>
</RelativeLayout>
