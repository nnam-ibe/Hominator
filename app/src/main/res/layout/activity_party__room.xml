<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="seg.user.interface3125.thehominator.Party_Room">

    <TextView android:text="Please select a date and time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp"
        android:id="@+id/party_room_main" />

    <TextView
        android:paddingTop="30dp"
        android:id="@+id/party_date_main"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="Select date:"
        android:layout_below="@+id/party_room_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:paddingTop="30dp"
        android:paddingLeft="10dp"
        android:cursorVisible="false"
        android:id="@+id/party_date_set"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_below="@+id/party_room_main"
        android:layout_toRightOf="@+id/party_date_main"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingTop="30dp"
        android:id="@+id/party_time_main"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="Select time:"
        android:layout_below="@+id/party_date_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:paddingTop="30dp"
        android:paddingLeft="10dp"
        android:id="@+id/party_time_set"
        android:textSize="20sp"
        android:cursorVisible="false"
        android:textColor="#000000"
        android:layout_below="@+id/party_date_main"
        android:layout_toRightOf="@id/party_time_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--<DatePicker-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/datePicker"-->
        <!--android:layout_below="@+id/party_room_main"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginTop="65dp" />-->


</RelativeLayout>
