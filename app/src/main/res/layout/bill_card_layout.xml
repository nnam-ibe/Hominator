<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        card_view:cardBackgroundColor="@color/colorCards"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="5dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:padding="16dp"
            android:layout_height="100dp">
            <LinearLayout
                android:id="@+id/bill_ll1"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/bill_title_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rent"
                    android:textSize="25dp"
                    />
                <TextView
                    android:id="@+id/bill_dueTextView"
                    android:layout_width="wrap_content"
                    android:paddingTop="10dp"
                    android:layout_height="wrap_content"
                    android:text="due in 6 days"
                    android:textSize="18dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/bill_ll2"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/bill_ll1"
                android:gravity="right">
                <TextView
                    android:id="@+id/bill_amountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="$500"
                    android:textSize="25dp"
                    android:gravity="center_vertical" />
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>