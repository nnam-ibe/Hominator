<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:orientation="vertical"

    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <LinearLayout
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/formInfo4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="Everything seem correct?"
            android:textSize="8pt"
            android:textStyle="bold" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:gravity="center">

            <TableRow>

                <TextView
                    android:id="@+id/conffirstName"
                    android:text="First name:"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="8pt"
                    android:maxLines="1"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/dpfirstName"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="8pt"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/confLastname"
                    android:text="Last name:"
                    android:textStyle="bold"
                    android:textSize="8pt"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/dpLastname"
                    android:layout_width="match_parent"
                    android:textSize="8pt"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/confemail"
                    android:textStyle="bold"
                    android:textSize="8pt"
                    android:text="Email:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/dpemail"
                    android:textSize="8pt"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/confusername"
                    android:text="Username:"
                    android:textStyle="bold"
                    android:textSize="8pt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/dpusername"
                    android:textSize="8pt"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true" />
            </TableRow>


            <TableRow>

                <TextView
                    android:id="@+id/confpassword"
                    android:textStyle="bold"
                    android:textSize="8pt"
                    android:layout_marginBottom="15dp"
                    android:text="Password:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/dppassword"
                    android:textSize="8pt"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:password="true"
                    android:maxLines="1"
                    android:singleLine="true" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/confaddress"
                    android:textStyle="bold"
                    android:textSize="8pt"
                    android:layout_marginBottom="15dp"
                    android:text="Address:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/dpaddress"
                    android:textSize="8pt"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/confcommunity"
                    android:textStyle="bold"
                    android:textSize="8pt"
                    android:layout_marginBottom="15dp"
                    android:text="Community:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true" />


                <TextView
                    android:id="@+id/dpcommunity"
                    android:textSize="8pt"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true" />
            </TableRow>
        </TableLayout>
        <Button
            android:id="@+id/bRegisComplete"
            style="?android:textAppearanceSmall"
            android:layout_width="215dp" android:layout_height="55dp"
            android:layout_marginTop="15dp" android:text="Finish"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="9pt"
            android:background="#4E7AC7"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</LinearLayout>
